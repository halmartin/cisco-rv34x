
config interface 'wan1'
	option enabled '1'
	option count '1'
	option timeout '4'
	option interval '5'
	option up '3'
	option down '3'
	option log '1'
	list track_ip '0.0.0.0'
	option reliability '0'

config interface 'wan2'
	option enabled '1'
	option count '1'
	option timeout '4'
	option interval '5'
	option up '3'
	option down '3'
	option log '1'
	list track_ip '0.0.0.0'
	option reliability '0'

config interface 'usb1'
	option enabled '1'
	option count '1'
	option timeout '4'
	option interval '5'
	option up '3'
	option down '3'
	option log '1'

config interface 'usb2'
	option enabled '1'
	option count '1'
	option timeout '4'
	option interval '5'
	option up '3'
	option down '3'
	option log '1'

config member 'wan1_mem'
	option interface 'wan1'
	option metric '1'
	option weight '100'

config member 'wan1_bak'
	option interface 'wan1'
	option metric '0'
	option weight '100'

config member 'wan2_mem'
	option interface 'wan2'
	option metric '2'
	option weight '100'

config member 'wan2_bak'
	option interface 'wan2'
	option metric '0'
	option weight '100'

config member 'usb1_mem'
	option interface 'usb1'
	option metric '3'
	option weight '100'

config member 'usb1_bak'
	option interface 'usb1'
	option metric '0'
	option weight '100'

config member 'usb2_mem'
	option interface 'usb2'
	option metric '4'
	option weight '100'

config member 'usb2_bak'
	option interface 'usb2'
	option metric '0'
	option weight '100'

config policy 'wan1_only'
	list use_member 'wan1_mem'

config policy 'wan2_only'
	list use_member 'wan2_mem'

config policy 'usb1_only'
	list use_member 'usb1_mem'

config policy 'usb2_only'
	list use_member 'usb2_mem'

config policy 'wan1_backup'
	list use_member 'wan1_bak'
	list use_member 'wan2_mem'
	list use_member 'usb1_mem'
	list use_member 'usb2_mem'

config policy 'wan2_backup'
	list use_member 'wan1_mem'
	list use_member 'wan2_bak'
	list use_member 'usb1_mem'
	list use_member 'usb2_mem'

config policy 'usb1_backup'
	list use_member 'wan1_mem'
	list use_member 'wan2_mem'
	list use_member 'usb1_bak'
	list use_member 'usb2_mem'

config policy 'usb2_backup'
	list use_member 'wan1_mem'
	list use_member 'wan2_mem'
	list use_member 'usb1_mem'
	list use_member 'usb2_bak'

config policy 'default_policy'
	list use_member 'wan1_mem'
	list use_member 'wan2_mem'
	list use_member 'usb1_mem'
	list use_member 'usb2_mem'

config rule 'default_rule'
	option dest_ip '0.0.0.0/0'
	option use_policy 'default_policy'

