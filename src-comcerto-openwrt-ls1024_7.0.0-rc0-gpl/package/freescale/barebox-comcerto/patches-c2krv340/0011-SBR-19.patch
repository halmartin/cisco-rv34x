+  while (len < sizePID)
   {
     c = getc();
-    if ( isalnum(c) || c == 0x0A || c == 0x0D || c == 0x2D )
+    if ( isalnum(c) || c == keyCR || c == '-' )
+    {
+      c = toupper(c);
       putchar(c);
+    }
     else
     {
       printf("\n c = %c : 0x%X Input Error! %s", c, c, help_string);
