   len = 0;
   printf("\nEnter VID : ");
-  while (len < sizeof(board_data.vid))
+  while (len < sizeVID)
   {
     c = getc();
-    if ( isalnum(c) || c == 0x0A || c == 0x0D )
+    if ( isalnum(c) || c == keyCR )
+    {
+      c = toupper(c);
       putchar(c);
+    }
     else
     {
       printf("\n c = %c : 0x%X Input Error! %s", c, c, help_string);
       return COMMAND_ERROR;
     }
-    if ( c == 0x0D )
+    if ( c == keyCR )
     {
       break;
     }
@@ -97,51 +121,54 @@ static int command_boardinfo_update(int argc, char *argv[])
 
   len = 0;
   printf("\nEnter S/N : ");
-  while (len < sizeof(board_data.s_n))
+  while (len < sizeS_N)
   {
     c = getc();
-    if ( isalnum(c) || c == 0x0A || c == 0x0D || c == 0x2D )
+    if ( isalnum(c) || c == keyCR )
+    {
+      c = toupper(c);
       putchar(c);
+    }
     else
     {
       printf("\n c = %c : 0x%X Input Error! %s", c, c, help_string);
       return COMMAND_ERROR;
     }
-    if ( c == 0x0D )
+    if ( c == keyCR )
     {
       break;
     }
     board_data.s_n[len++] = c;
   }
 
-  for (i=0; i<3; i++)
+  for (i = 0; i < countMAC; i++)
   {
-    isOctetFull = 0;
+    isOctetFull = empty;
     n_mac_octet = 0;
     printf("\nEnter %-5s MAC : ",  i == 0 ? "LAN" : (i == 1 ? "WAN-1" : "WAN-2"));
-    while (n_mac_octet < 6)
+    while (n_mac_octet < totalMAC_OCTET)
     {
-      c = getc();
+      c = toupper(getc());
       putchar(c);
-      if ((isxdigit(c)) && ( isOctetFull < 2 ))
+      if ((isxdigit(c)) && ( isOctetFull < full ))
       {
         unsigned char offset = 0;
-        offset = islower(c) ? 0x57 : isupper(c) ? 0x37 : isdigit(c) ? 0x30 : 0;
-        if ( isOctetFull == 0 )
+        offset = isupper(c) ? offsetALPHA : isdigit(c) ? offsetDIGIT : 0;
+        if ( isOctetFull == empty )
         {
           board_data.mac[i][n_mac_octet] = ((unsigned int)c - offset) << 4;
-          isOctetFull = 1;
+          isOctetFull = half;
         }
-        else if ( isOctetFull == 1 )
+        else if ( isOctetFull == half )
         {
           board_data.mac[i][n_mac_octet] |= (((unsigned int)c - offset) & 0xFF);
           ++n_mac_octet;
-          isOctetFull = 2;
+          isOctetFull = full;
         }
       }
-      else if ((  c == ':' ) && ( isOctetFull == 2 ))
+      else if ((  c == ':' ) && ( isOctetFull == full ))
       {
-        isOctetFull = 0;
+        isOctetFull = empty;
         continue;
       }
       else
@@ -211,23 +238,25 @@ static int command_boardinfo_show(int argc, char *argv[])
   flush(stdout);
 
   printf("\nPID  : ");
