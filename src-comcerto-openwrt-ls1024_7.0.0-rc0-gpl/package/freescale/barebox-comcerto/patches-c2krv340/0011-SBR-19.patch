@@ -50,8 +62,14 @@ char *filename = "/dev/spi1.board-info" ;
 static int command_boardinfo_update(int argc, char *argv[])
 {
   int ret = 0, fd = -1, n_written = 0;
-  int i, len = 0, isOctetFull = 0, n_mac_octet = 0;
+  int i, len = 0, n_mac_octet = 0;
   char c = '\0';
+  enum mac_octet_state {
+    empty = 0,
+    half  = 1,
+    full  = 2
+  };
+  enum mac_octet_state isOctetFull = empty;
   c2krv340 board_data;
 
   flush(stdin);
@@ -59,17 +77,20 @@ static int command_boardinfo_update(int argc, char *argv[])
   memset(&board_data, 0x00, sizeof(board_data));
 
