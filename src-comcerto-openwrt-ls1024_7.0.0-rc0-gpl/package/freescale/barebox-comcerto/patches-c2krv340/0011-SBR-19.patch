+  for(i = 0; i < sizePID; i++)
   {
     if (isprint(*((char *)board_data->pid + i)))
       putchar(*((char *)board_data->pid + i));
     else
       putchar(' ');
   }
+
   printf("\nVID  : ");
-  for(i = 0; i < 4; i++)
+  for(i = 0; i < sizeVID; i++)
   {
     if (isprint(*((char *)board_data->vid + i)))
       putchar(*((char *)board_data->vid + i));
     else
       putchar(' ');
   }
+
   printf("\nS/N  : ");
-  for(i = 0; i < 12; i++)
+  for(i = 0; i < sizeS_N; i++)
